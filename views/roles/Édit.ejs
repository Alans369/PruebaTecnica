<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Rol</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: none;
            transition: transform 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-primary {
            background-color: #0d6efd;
            border: none;
            padding: 10px 30px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        <div class="card p-4" style="width: 400px;">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Editar Rol</h2>
                <form  id="editRoleForm">
                    <input type="hidden" id="roleId" value="<%= role.id %>">
                    <div class="mb-4">
                        <label for="roleName" class="form-label">Nombre del Rol</label>
                        <input type="text" 
                               class="form-control form-control-lg" 
                               id="roleName" 
                               name="name" 
                               value="<%= role.name %>"
                               placeholder="Ingrese el nombre del rol"
                               required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Guardar Cambios
                        </button>
                        <a href="/roles" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script para manejar el envÃ­o del formulario -->
    <script>
        document.getElementById('editRoleForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const roleId = document.getElementById('roleId').value;
            const roleName = document.getElementById('roleName').value;

            try {
                const response = await fetch(`/roles/${roleId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name: roleName })
                });

                if (response.ok) {
                    window.location.href = '/roles'; // Redireccionar a la lista de roles
                } else {
                    alert('Error al actualizar el rol');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al actualizar el rol');
            }
        });
    </script>
</body>
</html>